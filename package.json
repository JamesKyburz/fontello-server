{
  "name": "fontello-server",
  "description": "fontello-server",
  "keywords": [
    "fonts",
    "fontello",
    "server-base",
    "leveldb",
    "cdn"
  ],
  "version": "1.0.14",
  "repository": {
    "type": "git",
    "url": "git://github.com/jameskyburz/fontello-server.git"
  },
  "author": {
    "name": "James Kyburz",
    "email": "james.kyburz@gmail.com"
  },
  "main": "index.js",
  "scripts": {
    "predocker:build": "docker build -t server-base git@github.com:jameskyburz/server-base.git",
    "docker:build": "docker build -t fontello-server .",
    "docker:deploy": "npm run docker:build && docker stop fontello-server || true && docker rm fontello-server || true && npm run docker:run",
    "docker:run": "docker run -d --restart=always -p 2016:2016 -e DB_PATH=/opt/fontellodb -v /opt/fontellodb:/opt/fontellodb --name fontello-server fontello-server",
    "docker:update": "npm run docker:build && docker kill fontello-server || true && docker rm fontello-server || true && npm run docker:run",
    "prepublish": "standard",
    "start": "node index"
  },
  "dependencies": {
    "fontello-mount": "2.0.8",
    "leveldb-mount": "1.0.10",
    "server-base": "1.0.10"
  },
  "license": "MIT"
}
